<footer class="footer">
  <!-- Trust Bar -->
  <div class="footer__trust-bar">
    <div class="page-width">
      <div class="footer__trust-inner">
        <div class="footer__trust-text">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          <span>{{ section.settings.trust_text }}</span>
        </div>
        <div class="footer__payment-icons">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>

  <!-- Main Footer -->
  <div class="footer__main">
    <div class="page-width">
      <div class="footer__grid">
        <!-- Brand -->
        <div class="footer__brand">
          <a href="{{ routes.root_url }}" class="footer__logo">{{ section.settings.logo_text }}</a>
          <p class="footer__tagline">{{ section.settings.tagline }}</p>
          <div class="footer__guarantee">
            <p>{{ section.settings.guarantee_text }}</p>
          </div>
        </div>

        <!-- Navigation -->
        <div class="footer__section">
          <h4 class="footer__heading">{{ section.settings.nav_heading }}</h4>
          <nav class="footer__links">
            {%- for block in section.blocks -%}
              {%- if block.type == 'nav_link' -%}
                <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</a>
              {%- endif -%}
            {%- endfor -%}
          </nav>
        </div>

        <!-- Contact -->
        <div class="footer__section">
          <h4 class="footer__heading">{{ section.settings.contact_heading }}</h4>
          <nav class="footer__links">
            <a href="mailto:{{ section.settings.email }}">{{ section.settings.email }}</a>
            <span>{{ section.settings.location }}</span>
          </nav>
          <div class="footer__support">
            <h4 class="footer__heading">{{ section.settings.support_heading }}</h4>
            <p>{{ section.settings.support_text }}</p>
          </div>
        </div>
      </div>

      <!-- Bottom -->
      <div class="footer__bottom">
        <p class="footer__copyright">© {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ section.settings.copyright_text }}</p>
        <nav class="footer__legal">
          {%- for block in section.blocks -%}
            {%- if block.type == 'legal_link' -%}
              <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>{{ block.settings.text }}</a>
            {%- endif -%}
          {%- endfor -%}
        </nav>
      </div>
    </div>
  </div>
</footer>

<style>
/* FOOTER - 100% RESPONSIVE */
.footer {
  background: var(--card, #0f0f0f);
  border-top: 1px solid var(--border, rgba(255,255,255,0.1));
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
}

.footer__trust-bar {
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  padding: 16px 0;
}

.footer__trust-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  text-align: center;
}

@media (min-width: 640px) {
  .footer__trust-inner {
    flex-direction: row;
    justify-content: space-between;
    text-align: left;
  }
}

.footer__trust-text {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 0.8125rem;
  color: var(--muted-foreground, #808080);
}

.footer__trust-text svg {
  opacity: 0.6;
  flex-shrink: 0;
}

.footer__payment-icons {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  gap: 8px;
  opacity: 0.4;
  max-width: 100%;
}

.footer__payment-icon {
  height: 18px;
  width: auto;
  max-width: 36px;
  flex-shrink: 0;
}

.footer__main {
  padding: 40px 0;
}

@media (min-width: 768px) {
  .footer__main {
    padding: 56px 0;
  }
}

.footer__grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 32px;
  margin-bottom: 32px;
}

@media (min-width: 640px) {
  .footer__grid {
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }
}

@media (min-width: 768px) {
  .footer__grid {
    grid-template-columns: 2fr 1fr 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }
}

.footer__brand {
  grid-column: 1 / -1;
}

@media (min-width: 768px) {
  .footer__brand {
    grid-column: auto;
  }
}

.footer__logo {
  display: inline-block;
  font-size: 1.5rem;
  font-family: var(--font-display, 'Cormorant Garamond', Georgia, serif);
  font-weight: 300;
  letter-spacing: 0.2em;
  color: var(--foreground, #ebebeb);
  margin-bottom: 12px;
}

@media (min-width: 768px) {
  .footer__logo {
    font-size: 1.75rem;
    margin-bottom: 16px;
  }
}

.footer__tagline {
  font-size: 0.8125rem;
  color: var(--muted-foreground, #808080);
  line-height: 1.6;
  max-width: 100%;
  margin-bottom: 20px;
}

@media (min-width: 768px) {
  .footer__tagline {
    max-width: 320px;
  }
}

.footer__guarantee {
  background: rgba(10, 10, 10, 0.5);
  border-radius: 10px;
  padding: 14px;
  max-width: 100%;
}

@media (min-width: 768px) {
  .footer__guarantee {
    max-width: 320px;
  }
}

.footer__guarantee p {
  font-size: 0.6875rem;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.5;
  margin: 0;
}

.footer__section {
  min-width: 0;
}

.footer__heading {
  font-size: 0.6875rem;
  font-family: var(--font-body, 'Inter', sans-serif);
  font-weight: 600;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--foreground, #ebebeb);
  margin-bottom: 12px;
}

.footer__links {
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.footer__links a,
.footer__links span {
  font-size: 0.8125rem;
  color: var(--muted-foreground, #808080);
  transition: color 0.2s;
  word-break: break-word;
}

.footer__links a:hover {
  color: var(--foreground, #ebebeb);
}

.footer__support {
  margin-top: 20px;
}

.footer__support p {
  font-size: 0.6875rem;
  color: rgba(255, 255, 255, 0.5);
  line-height: 1.5;
  margin: 0;
}

.footer__bottom {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12px;
  padding-top: 24px;
  border-top: 1px solid var(--border, rgba(255,255,255,0.1));
  text-align: center;
}

@media (min-width: 640px) {
  .footer__bottom {
    flex-direction: row;
    justify-content: space-between;
    text-align: left;
  }
}

.footer__copyright {
  font-size: 0.6875rem;
  color: var(--muted-foreground, #808080);
}

.footer__legal {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 12px 16px;
}

@media (min-width: 640px) {
  .footer__legal {
    justify-content: flex-end;
  }
}

.footer__legal a {
  font-size: 0.6875rem;
  color: var(--muted-foreground, #808080);
  transition: color 0.2s;
}

.footer__legal a:hover {
  color: var(--foreground, #ebebeb);
}
</style>

