{% comment %}
  LUMEI - Página Concepto
  100% editable desde Shopify Theme Editor
{% endcomment %}

{%- style -%}
  .page-concepto {
    padding: 8rem 1.5rem 5rem;
  }

  .page-concepto__container {
    max-width: 48rem;
    margin: 0 auto;
  }

  .page-concepto__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-concepto__subtitle {
    font-size: 0.875rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_muted }};
    margin-bottom: 1rem;
    font-family: 'Inter', sans-serif;
  }

  .page-concepto__title {
    font-size: 2.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
  }

  .page-concepto__content {
    display: flex;
    flex-direction: column;
    gap: 4rem;
  }

  .page-concepto__block {
    display: grid;
    gap: 2rem;
    align-items: center;
  }

  @media (min-width: 768px) {
    .page-concepto__block {
      grid-template-columns: 1fr 1fr;
    }

    .page-concepto__block--reverse {
      direction: rtl;
    }

    .page-concepto__block--reverse > * {
      direction: ltr;
    }
  }

  .page-concepto__image-container {
    aspect-ratio: 4/5;
    overflow: hidden;
    border-radius: 1rem;
    background: {{ settings.color_card }};
  }

  .page-concepto__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .page-concepto__text {
    padding: 1rem 0;
  }

  .page-concepto__block-title {
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 400;
    color: {{ settings.color_foreground }};
    margin-bottom: 1rem;
  }

  .page-concepto__block-text {
    font-size: 1rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
    line-height: 1.8;
  }

  .page-concepto__cta {
    text-align: center;
    margin-top: 4rem;
    padding: 3rem;
    background: {{ settings.color_card }};
    border-radius: 1rem;
  }

  .page-concepto__cta-text {
    font-size: 1.25rem;
    font-family: 'Cormorant Garamond', serif;
    color: {{ settings.color_foreground }};
    margin-bottom: 1.5rem;
  }
{%- endstyle -%}

<section class="page-concepto">
  <div class="page-concepto__container">
    <div class="page-concepto__header">
      <p class="page-concepto__subtitle">{{ section.settings.subtitle }}</p>
      <h1 class="page-concepto__title">{{ section.settings.title }}</h1>
    </div>

    <div class="page-concepto__content">
      {%- for block in section.blocks -%}
        {%- if block.type == 'content_block' -%}
          <div class="page-concepto__block {% if forloop.index0 | modulo: 2 == 1 %}page-concepto__block--reverse{% endif %}" {{ block.shopify_attributes }}>
            <div class="page-concepto__image-container">
              {%- if block.settings.image != blank -%}
                <img 
                  src="{{ block.settings.image | image_url: width: 800 }}" 
                  alt="{{ block.settings.image.alt | default: block.settings.block_title }}"
                  class="page-concepto__image"
                  loading="lazy"
                >
              {%- else -%}
                {{ 'image' | placeholder_svg_tag: 'page-concepto__image' }}
              {%- endif -%}
            </div>
            <div class="page-concepto__text">
              <h2 class="page-concepto__block-title">{{ block.settings.block_title }}</h2>
              <p class="page-concepto__block-text">{{ block.settings.block_text }}</p>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>

    {%- if section.settings.show_cta -%}
      <div class="page-concepto__cta">
        <p class="page-concepto__cta-text">{{ section.settings.cta_text }}</p>
        <a href="{{ section.settings.cta_link }}" class="button button--primary button--lg">
          {{ section.settings.cta_button }}
        </a>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Página Concepto",
  "tag": "section",
  "class": "section-page-concepto",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Filosofía LUMEI"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "No vendemos lámparas. Vendemos luz que te define."
    },
    {
      "type": "header",
      "content": "Llamada a la acción"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Mostrar CTA",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Texto CTA",
      "default": "¿Listo para encontrar tu luz?"
    },
    {
      "type": "text",
      "id": "cta_button",
      "label": "Texto botón",
      "default": "Ver colección"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Enlace botón"
    }
  ],
  "blocks": [
    {
      "type": "content_block",
      "name": "Bloque de contenido",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "block_title",
          "label": "Título",
          "default": "Título del bloque"
        },
        {
          "type": "textarea",
          "id": "block_text",
          "label": "Texto",
          "default": "Descripción del bloque de contenido."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Página Concepto",
      "blocks": [
        {
          "type": "content_block",
          "settings": {
            "block_title": "Cada luz, una identidad",
            "block_text": "No elegimos la luz que mejor ilumina. Elegimos la luz que mejor nos representa. CALMA para los que buscan paz interior. ENFOQUE para los que necesitan claridad. PROFUNDO para los que abrazan la calidez."
          }
        },
        {
          "type": "content_block",
          "settings": {
            "block_title": "Cristal natural, luz única",
            "block_text": "Cada LUMEI está hecha con cristal de amatista natural. No hay dos iguales. Las variaciones son la firma de la naturaleza, no imperfecciones."
          }
        },
        {
          "type": "content_block",
          "settings": {
            "block_title": "Diseñado para vivir contigo",
            "block_text": "LUMEI no es solo un objeto. Es un compañero de escritorio, de mesilla, de momentos. Se adapta a tu ritmo, a tu espacio, a tu día."
          }
        }
      ]
    }
  ]
}
{% endschema %}
