{% comment %}
  LUMEI - Testimonials Section
{% endcomment %}

<style>
  .testimonials {
    padding: 100px 20px;
    background: {{ settings.color_card }};
  }

  .testimonials__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .testimonials__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .testimonials__subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 16px;
  }

  .testimonials__title {
    font-size: 2rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
  }

  @media (min-width: 768px) {
    .testimonials__title {
      font-size: 2.5rem;
    }
  }

  .testimonials__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .testimonials__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .testimonial-card {
    background: {{ settings.color_background }};
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-radius: 16px;
    padding: 32px;
    position: relative;
  }

  .testimonial-card__glow {
    position: absolute;
    top: -1px;
    left: 50%;
    transform: translateX(-50%);
    width: 60%;
    height: 2px;
    border-radius: 2px;
  }

  .testimonial-card__quote {
    font-size: 1rem;
    font-style: italic;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.9 }};
    line-height: 1.7;
    margin-bottom: 24px;
  }

  .testimonial-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .testimonial-card__author {
    font-size: 0.875rem;
    font-weight: 500;
    color: {{ settings.color_foreground }};
  }

  .testimonial-card__variant {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
  }
</style>

<section class="testimonials">
  <div class="testimonials__container">
    <div class="testimonials__header">
      <p class="testimonials__subtitle">{{ section.settings.subtitle }}</p>
      <h2 class="testimonials__title">{{ section.settings.title }}</h2>
    </div>

    <div class="testimonials__grid">
      {%- for block in section.blocks -%}
        <div class="testimonial-card" {{ block.shopify_attributes }}>
          <div class="testimonial-card__glow" style="background: {{ block.settings.color }};"></div>
          <p class="testimonial-card__quote">"{{ block.settings.quote }}"</p>
          <div class="testimonial-card__footer">
            <span class="testimonial-card__author">{{ block.settings.author }}</span>
            <span class="testimonial-card__variant" style="color: {{ block.settings.color }};">{{ block.settings.variant }}</span>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

