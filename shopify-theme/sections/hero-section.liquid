{% comment %}
  LUMEI - Hero Section
{% endcomment %}

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: {{ settings.color_background }};
    position: relative;
    overflow: hidden;
    padding: 100px 20px 60px;
  }

  .hero__container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero__container {
      grid-template-columns: 1fr 1fr;
      gap: 80px;
    }
  }

  .hero__content {
    text-align: center;
  }

  @media (min-width: 1024px) {
    .hero__content {
      text-align: left;
    }
  }

  .hero__subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 24px;
  }

  .hero__title {
    font-size: 2.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    line-height: 1.1;
    color: {{ settings.color_foreground }};
    margin-bottom: 24px;
  }

  @media (min-width: 768px) {
    .hero__title {
      font-size: 3.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero__title {
      font-size: 4rem;
    }
  }

  .hero__title-line {
    display: block;
  }

  .hero__description {
    font-size: 1.125rem;
    color: {{ settings.color_muted }};
    line-height: 1.7;
    max-width: 500px;
    margin: 0 auto 32px;
  }

  @media (min-width: 1024px) {
    .hero__description {
      margin: 0 0 32px;
    }
  }

  .hero__cta {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .hero__cta {
      justify-content: flex-start;
    }
  }

  .hero__btn-primary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: {{ settings.color_button_bg }};
    color: {{ settings.color_button_text }};
    font-size: 0.9375rem;
    font-weight: 500;
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .hero__btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .hero__btn-secondary {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 16px 32px;
    background: transparent;
    color: {{ settings.color_foreground }};
    font-size: 0.9375rem;
    font-weight: 500;
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.2 }};
    border-radius: 10px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .hero__btn-secondary:hover {
    background: {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-color: {{ settings.color_lamp_purple }};
  }

  .hero__trust {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    justify-content: center;
    margin-top: 40px;
    padding-top: 40px;
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  @media (min-width: 1024px) {
    .hero__trust {
      justify-content: flex-start;
    }
  }

  .hero__trust-item {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 0.8125rem;
    color: {{ settings.color_muted }};
  }

  .hero__trust-item svg {
    color: {{ settings.color_lamp_purple }};
  }

  .hero__image {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero__image-container {
    position: relative;
    width: 100%;
    max-width: 500px;
  }

  .hero__product-image {
    width: 100%;
    height: auto;
    position: relative;
    z-index: 2;
  }

  .hero__glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120%;
    height: 120%;
    background: radial-gradient(circle, {{ settings.color_lamp_purple | color_modify: 'alpha', 0.3 }} 0%, transparent 60%);
    z-index: 1;
    pointer-events: none;
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.6; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 1; transform: translate(-50%, -50%) scale(1.1); }
  }
</style>

<section class="hero" id="hero">
  <div class="hero__container">
    <div class="hero__content">
      <p class="hero__subtitle">{{ section.settings.subtitle }}</p>
      <h1 class="hero__title">
        <span class="hero__title-line">{{ section.settings.title_line1 }}</span>
        <span class="hero__title-line">{{ section.settings.title_line2 }}</span>
      </h1>
      <p class="hero__description">{{ section.settings.description }}</p>
      
      <div class="hero__cta">
        <a href="{{ section.settings.cta_primary_link }}" class="hero__btn-primary">
          {{ section.settings.cta_primary_text }}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="{{ section.settings.cta_secondary_link }}" class="hero__btn-secondary">
          {{ section.settings.cta_secondary_text }}
        </a>
      </div>

      <div class="hero__trust">
        <div class="hero__trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="3" width="15" height="13"></rect>
            <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"></polygon>
            <circle cx="5.5" cy="18.5" r="2.5"></circle>
            <circle cx="18.5" cy="18.5" r="2.5"></circle>
          </svg>
          <span>Envío gratis</span>
        </div>
        <div class="hero__trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
          <span>30 días devolución</span>
        </div>
        <div class="hero__trust-item">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <span>Pago seguro</span>
        </div>
      </div>
    </div>

    <div class="hero__image">
      <div class="hero__image-container">
        <div class="hero__glow"></div>
        {%- if section.settings.image != blank -%}
          <img src="{{ section.settings.image | image_url: width: 800 }}" alt="{{ section.settings.image.alt | default: 'LUMEI Lamp' }}" class="hero__product-image">
        {%- else -%}
          <img src="{{ 'lumei-product.png' | asset_url }}" alt="LUMEI Lamp" class="hero__product-image">
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero LUMEI",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Tu luz. Tu elección."
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Título línea 1",
      "default": "La luz que eliges"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Título línea 2",
      "default": "dice quién eres."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "LUMEI no vende lámparas. LUMEI ofrece identidad a través de la luz."
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Imagen del producto"
    },
    {
      "type": "text",
      "id": "cta_primary_text",
      "label": "Texto botón principal",
      "default": "Elige tu luz"
    },
    {
      "type": "url",
      "id": "cta_primary_link",
      "label": "Enlace botón principal"
    },
    {
      "type": "text",
      "id": "cta_secondary_text",
      "label": "Texto botón secundario",
      "default": "Ver colección"
    },
    {
      "type": "url",
      "id": "cta_secondary_link",
      "label": "Enlace botón secundario"
    }
  ],
  "presets": [
    {
      "name": "Hero LUMEI"
    }
  ]
}
{% endschema %}
