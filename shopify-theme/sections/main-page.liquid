{% comment %}
  LUMEI - Main Page Section
{% endcomment %}

{%- style -%}
  .page-section {
    padding: 6rem 1.5rem 5rem;
  }

  .page-section__container {
    max-width: 48rem;
    margin: 0 auto;
  }

  .page-section__title {
    font-size: 2.25rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
    margin-bottom: 2rem;
    text-align: center;
  }

  @media (min-width: 640px) {
    .page-section__title {
      font-size: 3rem;
    }
  }

  .page-section__content {
    font-size: 1rem;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.8 }};
    font-family: 'Inter', sans-serif;
    line-height: 1.7;
  }

  .page-section__content h2 {
    font-family: 'Cormorant Garamond', serif;
    font-weight: 400;
    font-size: 1.5rem;
    margin: 2rem 0 1rem;
    color: {{ settings.color_foreground }};
  }

  .page-section__content p {
    margin-bottom: 1rem;
  }

  .page-section__content a {
    color: {{ settings.color_lamp_purple }};
    text-decoration: underline;
  }

  .page-section__content ul,
  .page-section__content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .page-section__content li {
    margin-bottom: 0.5rem;
  }
{%- endstyle -%}

<section class="page-section">
  <div class="page-section__container">
    <h1 class="page-section__title">{{ page.title }}</h1>
    <div class="page-section__content">
      {{ page.content }}
    </div>
  </div>
</section>

