{% comment %}
  LUMEI - Concept Section
  Sección de concepto emocional
{% endcomment %}

{%- style -%}
  .concept-section {
    position: relative;
    padding: 8rem 1.5rem;
    overflow: hidden;
  }

  .concept-section__glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 37.5rem;
    height: 37.5rem;
    border-radius: 50%;
    background: radial-gradient(circle, {{ settings.color_lamp_purple | color_modify: 'alpha', 0.1 }}, transparent 70%);
    filter: blur(80px);
    opacity: 0.2;
  }

  .concept-section__container {
    position: relative;
    z-index: 10;
    max-width: 56rem;
    margin: 0 auto;
    text-align: center;
  }

  .concept-section__subtitle {
    font-size: 0.875rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_muted }};
    margin-bottom: 2rem;
    font-family: 'Inter', sans-serif;
  }

  .concept-section__title {
    font-size: 1.875rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    line-height: 1.3;
    margin-bottom: 2rem;
    color: {{ settings.color_foreground }};
  }

  @media (min-width: 640px) {
    .concept-section__title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .concept-section__title {
      font-size: 3rem;
    }
  }

  .concept-section__title-muted {
    color: {{ settings.color_muted }};
  }

  .concept-section__description {
    font-size: 1.125rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
    font-weight: 300;
    max-width: 42rem;
    margin: 0 auto;
    line-height: 1.7;
  }
{%- endstyle -%}

<section id="concepto" class="concept-section">
  <div class="concept-section__glow"></div>

  <div class="concept-section__container">
    <p class="concept-section__subtitle">{{ section.settings.subtitle }}</p>
    
    <h2 class="concept-section__title">
      {{ section.settings.title_line1 }}<br>
      <span class="concept-section__title-muted">{{ section.settings.title_line2 }}</span>
    </h2>
    
    <p class="concept-section__description">
      {{ section.settings.description }}
    </p>
  </div>
</section>

{% schema %}
{
  "name": "Concepto LUMEI",
  "tag": "section",
  "class": "section-concept",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "El concepto"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Título línea 1",
      "default": "No todas las luces"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Título línea 2 (atenuado)",
      "default": "se sienten igual."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Hay quienes buscan calma en el púrpura. Hay quienes piensan mejor en azul. Hay quienes prefieren la calidez del ámbar. Tu elección de luz no es decoración, es una declaración silenciosa de quién eres."
    }
  ],
  "presets": [
    {
      "name": "Concepto LUMEI"
    }
  ]
}
{% endschema %}