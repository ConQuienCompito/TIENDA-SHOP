{% comment %}
  LUMEI - Concept Section
{% endcomment %}

<style>
  .concept {
    padding: 100px 20px;
    background: {{ settings.color_background }};
  }

  .concept__container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .concept__subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 24px;
  }

  .concept__title {
    font-size: 2rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    line-height: 1.2;
    color: {{ settings.color_foreground }};
    margin-bottom: 32px;
  }

  @media (min-width: 768px) {
    .concept__title {
      font-size: 2.5rem;
    }
  }

  .concept__title-line {
    display: block;
  }

  .concept__description {
    font-size: 1.125rem;
    color: {{ settings.color_muted }};
    line-height: 1.8;
    max-width: 600px;
    margin: 0 auto;
  }
</style>

<section class="concept" id="concepto">
  <div class="concept__container">
    <p class="concept__subtitle">{{ section.settings.subtitle }}</p>
    <h2 class="concept__title">
      <span class="concept__title-line">{{ section.settings.title_line1 }}</span>
      <span class="concept__title-line">{{ section.settings.title_line2 }}</span>
    </h2>
    <p class="concept__description">{{ section.settings.description }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Concepto LUMEI",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "El concepto"
    },
    {
      "type": "text",
      "id": "title_line1",
      "label": "Título línea 1",
      "default": "No todas las luces"
    },
    {
      "type": "text",
      "id": "title_line2",
      "label": "Título línea 2",
      "default": "se sienten igual."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Descripción",
      "default": "Hay quienes buscan calma en el púrpura. Hay quienes piensan mejor en azul. Hay quienes prefieren la calidez del ámbar. Tu elección de luz no es decoración, es una declaración silenciosa de quién eres."
    }
  ],
  "presets": [
    {
      "name": "Concepto LUMEI"
    }
  ]
}
{% endschema %}
