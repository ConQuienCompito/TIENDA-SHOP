{% comment %}
  LUMEI - 404 Section
{% endcomment %}

{%- style -%}
  .error-section {
    padding: 8rem 1.5rem;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .error-section__container {
    max-width: 32rem;
    margin: 0 auto;
    text-align: center;
  }

  .error-section__code {
    font-size: 6rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 1rem;
    line-height: 1;
  }

  .error-section__title {
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
    margin-bottom: 1rem;
  }

  .error-section__text {
    font-size: 1rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
    margin-bottom: 2rem;
  }
{%- endstyle -%}

<section class="error-section">
  <div class="error-section__container">
    <p class="error-section__code">404</p>
    <h1 class="error-section__title">{{ section.settings.heading }}</h1>
    <p class="error-section__text">{{ section.settings.text }}</p>
    <a href="{{ section.settings.button_link | default: routes.root_url }}" class="button button--primary button--lg">
      {{ section.settings.button_text }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Error 404",
  "tag": "section",
  "class": "section-main-404",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título",
      "default": "Página no encontrada"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Texto",
      "default": "La página que buscas no existe."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Texto del botón",
      "default": "Volver al inicio"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Enlace del botón"
    }
  ]
}
{% endschema %}