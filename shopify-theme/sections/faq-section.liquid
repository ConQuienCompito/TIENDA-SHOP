{% comment %}
  LUMEI - FAQ Section
{% endcomment %}

<style>
  .faq {
    padding: 100px 20px;
    background: {{ settings.color_background }};
  }

  .faq__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .faq__subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 16px;
  }

  .faq__title {
    font-size: 2rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
  }

  @media (min-width: 768px) {
    .faq__title {
      font-size: 2.5rem;
    }
  }

  .faq__list {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .faq__item {
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-radius: 12px;
    background: {{ settings.color_card }};
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .faq__item[open] {
    border-color: {{ settings.color_lamp_purple | color_modify: 'alpha', 0.3 }};
  }

  .faq__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 24px;
    cursor: pointer;
    list-style: none;
    font-size: 1rem;
    font-weight: 500;
    color: {{ settings.color_foreground }};
    transition: color 0.2s ease;
  }

  .faq__question::-webkit-details-marker {
    display: none;
  }

  .faq__question:hover {
    color: {{ settings.color_lamp_purple }};
  }

  .faq__icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: {{ settings.color_muted }};
    transition: transform 0.3s ease;
  }

  .faq__item[open] .faq__icon {
    transform: rotate(180deg);
    color: {{ settings.color_lamp_purple }};
  }

  .faq__answer {
    padding: 0 24px 20px;
    font-size: 0.9375rem;
    color: {{ settings.color_muted }};
    line-height: 1.7;
  }
</style>

<section class="faq" id="faq">
  <div class="faq__container">
    <div class="faq__header">
      <p class="faq__subtitle">{{ section.settings.subtitle }}</p>
      <h2 class="faq__title">{{ section.settings.title }}</h2>
    </div>

    <div class="faq__list">
      {%- for block in section.blocks -%}
        <details class="faq__item" {{ block.shopify_attributes }}>
          <summary class="faq__question">
            {{ block.settings.question }}
            <svg class="faq__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </summary>
          <div class="faq__answer">{{ block.settings.answer }}</div>
        </details>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "FAQ LUMEI",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Preguntas"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Lo esencial."
    }
  ],
  "blocks": [
    {
      "type": "faq",
      "name": "Pregunta",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Pregunta",
          "default": "¿Pregunta frecuente?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Respuesta",
          "default": "Aquí va la respuesta a la pregunta."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "FAQ LUMEI",
      "blocks": [
        {
          "type": "faq",
          "settings": {
            "question": "¿Cómo funciona el envío?",
            "answer": "Envío gratuito a toda España peninsular en 24-48h laborables. Baleares, Canarias y Portugal tienen un coste adicional calculado al finalizar la compra."
          }
        },
        {
          "type": "faq",
          "settings": {
            "question": "¿Qué fuente de alimentación necesita?",
            "answer": "LUMEI funciona mediante conexión USB-C. Incluye un cable de 2 metros. Puedes conectarla a cualquier puerto USB, adaptador de corriente o powerbank."
          }
        }
      ]
    }
  ]
}
{% endschema %}
