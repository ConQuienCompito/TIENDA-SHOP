<footer class="footer">
  <div class="page-width">
    <div class="footer__grid">
      <div class="footer__brand">
        <span class="footer__logo">{{ section.settings.logo_text | default: "LUMEI" }}</span>
        <p class="footer__tagline">{{ section.settings.tagline | default: "Identidad a través de la luz. Cada LUMEI es único, como quien lo elige." }}</p>
      </div>
      
      <div class="footer__nav">
        <h4 class="footer__title">Navegación</h4>
        <nav class="footer__links" role="navigation" aria-label="Navegación del footer">
          {%- if section.settings.menu != blank -%}
            {%- for link in linklists[section.settings.menu].links -%}
              <a href="{{ link.url }}"{% if link.active %} aria-current="page"{% endif %}>{{ link.title }}</a>
            {%- endfor -%}
          {%- else -%}
            <a href="/">Inicio</a>
            <a href="/collections/all">Colección</a>
          {%- endif -%}
        </nav>
      </div>
      
      <div class="footer__contact">
        <h4 class="footer__title">Contacto</h4>
        {%- if section.settings.email != blank -%}
          <p class="footer__contact-email">{{ section.settings.email }}</p>
        {%- endif -%}
        {%- if section.settings.location != blank -%}
          <p class="footer__contact-location">{{ section.settings.location }}</p>
        {%- endif -%}
      </div>
    </div>
    
    <div class="footer__bottom">
      <p class="footer__copyright">© {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.</p>
      <div class="footer__payment">
        {%- for type in shop.enabled_payment_types -%}
          {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
        {%- endfor -%}
      </div>
    </div>
  </div>
</footer>

<style>
.footer { background: var(--color-bg-card); border-top: 1px solid var(--color-border); padding: 60px 0 24px; }
.footer__grid { display: grid; grid-template-columns: 1fr; gap: 40px; margin-bottom: 40px; }
@media (min-width: 768px) { .footer__grid { grid-template-columns: 2fr 1fr 1fr; } }
.footer__logo { font-size: 1.5rem; font-family: var(--font-display); font-weight: 300; letter-spacing: 0.15em; color: var(--color-text); display: block; margin-bottom: 16px; }
.footer__tagline { font-size: 0.875rem; color: var(--color-text-muted); line-height: 1.7; max-width: 280px; }
.footer__title { font-size: 0.75rem; font-weight: 600; letter-spacing: 0.1em; text-transform: uppercase; color: var(--color-text-muted); margin-bottom: 20px; font-family: var(--font-main); }
.footer__links { display: flex; flex-direction: column; gap: 12px; }
.footer__links a { font-size: 0.9375rem; color: var(--color-text-soft); transition: color 0.2s; }
.footer__links a:hover { color: var(--color-text); }
.footer__contact-email { font-size: 0.9375rem; color: var(--color-primary); margin-bottom: 8px; }
.footer__contact-location { font-size: 0.9375rem; color: var(--color-text-soft); }
.footer__bottom { padding-top: 24px; border-top: 1px solid var(--color-border); display: flex; flex-direction: column; gap: 16px; align-items: center; text-align: center; }
@media (min-width: 768px) { .footer__bottom { flex-direction: row; justify-content: space-between; text-align: left; } }
.footer__copyright { font-size: 0.8125rem; color: var(--color-text-muted); }
.footer__payment { display: flex; gap: 8px; flex-wrap: wrap; }
.footer__payment-icon { height: 24px; width: auto; opacity: 0.6; }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del logo",
      "default": "LUMEI"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Identidad a través de la luz. Cada LUMEI es único, como quien lo elige."
    },
    {
      "type": "text",
      "id": "email",
      "label": "Email de contacto",
      "default": "hola@lumei.es"
    },
    {
      "type": "text",
      "id": "location",
      "label": "Ubicación",
      "default": "España"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menú de navegación"
    }
  ]
}
{% endschema %}
