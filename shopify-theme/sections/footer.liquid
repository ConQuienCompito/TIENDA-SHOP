{% comment %}
  LUMEI - Footer
{% endcomment %}

<style>
  .footer {
    background: {{ settings.color_card }};
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    padding: 60px 0 24px;
  }

  .footer__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    margin-bottom: 40px;
  }

  @media (min-width: 768px) {
    .footer__grid {
      grid-template-columns: 2fr 1fr 1fr;
    }
  }

  .footer__brand-logo {
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    letter-spacing: 0.15em;
    color: {{ settings.color_foreground }};
    margin-bottom: 16px;
    display: block;
  }

  .footer__tagline {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    line-height: 1.7;
    max-width: 280px;
  }

  .footer__title {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: {{ settings.color_muted }};
    margin-bottom: 20px;
  }

  .footer__links {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer__link {
    font-size: 0.9375rem;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.7 }};
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .footer__link:hover {
    color: {{ settings.color_foreground }};
  }

  .footer__contact-item {
    font-size: 0.9375rem;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.7 }};
    margin-bottom: 8px;
  }

  .footer__contact-item a {
    color: {{ settings.color_lamp_purple }};
    text-decoration: none;
  }

  .footer__contact-item a:hover {
    text-decoration: underline;
  }

  .footer__bottom {
    padding-top: 24px;
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .footer__bottom-inner {
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer__bottom-inner {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer__copyright {
    font-size: 0.8125rem;
    color: {{ settings.color_muted }};
  }

  .footer__payment {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer__payment-icon {
    height: 24px;
    width: auto;
    opacity: 0.6;
  }

  .footer__policies {
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .footer__policy-link {
    font-size: 0.8125rem;
    color: {{ settings.color_muted }};
    text-decoration: none;
  }

  .footer__policy-link:hover {
    color: {{ settings.color_foreground }};
  }
</style>

<footer class="footer">
  <div class="footer__container">
    <div class="footer__grid">
      <!-- Brand -->
      <div class="footer__brand">
        <span class="footer__brand-logo">{{ section.settings.logo_text | default: 'LUMEI' }}</span>
        <p class="footer__tagline">{{ section.settings.tagline | default: 'Identidad a través de la luz. Cada LUMEI es único, como quien lo elige.' }}</p>
      </div>

      <!-- Navigation -->
      <div class="footer__nav">
        <h4 class="footer__title">{{ section.settings.nav_title | default: 'Navegación' }}</h4>
        <nav class="footer__links">
          <a href="/" class="footer__link">Inicio</a>
          <a href="/collections/all" class="footer__link">Colección</a>
          <a href="/pages/concepto" class="footer__link">Concepto</a>
          <a href="/pages/faq" class="footer__link">FAQ</a>
        </nav>
      </div>

      <!-- Contact -->
      <div class="footer__contact">
        <h4 class="footer__title">{{ section.settings.contact_title | default: 'Contacto' }}</h4>
        <p class="footer__contact-item">
          <a href="mailto:{{ section.settings.contact_email | default: 'hola@lumei.es' }}">{{ section.settings.contact_email | default: 'hola@lumei.es' }}</a>
        </p>
        <p class="footer__contact-item">{{ section.settings.contact_location | default: 'España' }}</p>
      </div>
    </div>

    <div class="footer__bottom">
      <div class="footer__bottom-inner">
        <p class="footer__copyright">© {{ 'now' | date: '%Y' }} {{ shop.name }}. Todos los derechos reservados.</p>
        
        <div class="footer__payment">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'footer__payment-icon' }}
          {%- endfor -%}
        </div>

        <div class="footer__policies">
          <a href="/policies/privacy-policy" class="footer__policy-link">Privacidad</a>
          <a href="/policies/terms-of-service" class="footer__policy-link">Términos</a>
          <a href="/policies/refund-policy" class="footer__policy-link">Devoluciones</a>
        </div>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del logo",
      "default": "LUMEI"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Identidad a través de la luz. Cada LUMEI es único, como quien lo elige."
    },
    {
      "type": "text",
      "id": "nav_title",
      "label": "Título navegación",
      "default": "Navegación"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Título contacto",
      "default": "Contacto"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email",
      "default": "hola@lumei.es"
    },
    {
      "type": "text",
      "id": "contact_location",
      "label": "Ubicación",
      "default": "España"
    }
  ]
}
{% endschema %}
