      "default": "30 días"
    },
    {
      "type": "text",
      "id": "feature2_text",
      "label": "Texto 2",
      "default": "Devolución sin preguntas"
    },
    {
      "type": "header",
      "content": "Característica 3"
    },
    {
      "type": "text",
      "id": "feature3_title",
      "label": "Título 3",
      "default": "Pago seguro"
    },
    {
      "type": "text",
      "id": "feature3_text",
      "label": "Texto 3",
      "default": "Datos encriptados"
    },
    {
      "type": "header",
      "content": "Característica 4"
    },
    {
      "type": "text",
      "id": "feature4_title",
      "label": "Título 4",
      "default": "Garantía 2 años"
    },
    {
      "type": "text",
      "id": "feature4_text",
      "label": "Texto 4",
      "default": "Tranquilidad total"
    }
  ]
}
{% endschema %}
