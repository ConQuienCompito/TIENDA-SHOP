    {
      "type": "text",
      "id": "feature1_text",
      "label": "Texto 1",
      "default": "España peninsular 24-48h"
    },
    {
      "type": "header",
      "content": "Característica 2"
    },
    {
      "type": "text",
      "id": "feature2_title",
