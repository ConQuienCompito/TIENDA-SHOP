{% comment %}
  LUMEI - Variants Section
{% endcomment %}

<style>
  .variants {
    padding: 100px 20px;
    background: {{ settings.color_card }};
  }

  .variants__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .variants__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .variants__subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 16px;
  }

  .variants__title {
    font-size: 2rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
  }

  @media (min-width: 768px) {
    .variants__title {
      font-size: 2.5rem;
    }
  }

  .variants__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .variants__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .variant-card {
    position: relative;
    background: {{ settings.color_background }};
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-radius: 16px;
    padding: 40px 32px;
    text-align: center;
    text-decoration: none;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .variant-card:hover {
    transform: translateY(-4px);
  }

  .variant-card__glow {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 200px;
    height: 200px;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .variant-card:hover .variant-card__glow {
    opacity: 0.3;
  }

  .variant-card__name {
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 400;
    letter-spacing: 0.1em;
    margin-bottom: 16px;
    position: relative;
    z-index: 1;
  }

  .variant-card__description {
    font-size: 0.9375rem;
    color: {{ settings.color_muted }};
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
  }

  .variant-card__identity {
    font-size: 0.8125rem;
    font-style: italic;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.6 }};
    margin-bottom: 24px;
    position: relative;
    z-index: 1;
  }

  .variant-card__cta {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    position: relative;
    z-index: 1;
  }
</style>

<section class="variants" id="variantes">
  <div class="variants__container">
    <div class="variants__header">
      <p class="variants__subtitle">{{ section.settings.subtitle }}</p>
      <h2 class="variants__title">{{ section.settings.title }}</h2>
    </div>

    <div class="variants__grid">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.product_link | default: '/collections/all' }}" class="variant-card" {{ block.shopify_attributes }}>
          <div class="variant-card__glow" style="background: radial-gradient(circle, {{ block.settings.color }}, transparent 70%);"></div>
          <h3 class="variant-card__name" style="color: {{ block.settings.color }};">{{ block.settings.name }}</h3>
          <p class="variant-card__description">{{ block.settings.description }}</p>
          <p class="variant-card__identity">{{ block.settings.identity }}</p>
          <span class="variant-card__cta" style="color: {{ block.settings.color }};">
            Descubrir
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </span>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

