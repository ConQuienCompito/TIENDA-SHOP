{% comment %}
  LUMEI - Variants Section
  Sección de variantes como identidad - con enlaces a productos reales
{% endcomment %}

{%- style -%}
  .variants-section {
    position: relative;
    padding: 8rem 1.5rem;
    overflow: hidden;
  }

  .variants-section__glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50rem;
    height: 50rem;
    border-radius: 50%;
    filter: blur(100px);
    transition: background 1s ease;
  }

  .variants-section__container {
    position: relative;
    z-index: 10;
    max-width: 80rem;
    margin: 0 auto;
  }

  .variants-section__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .variants-section__subtitle {
    font-size: 0.875rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_muted }};
    margin-bottom: 1rem;
    font-family: 'Inter', sans-serif;
  }

  .variants-section__title {
    font-size: 1.875rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
  }

  @media (min-width: 640px) {
    .variants-section__title {
      font-size: 2.25rem;
    }
  }

  @media (min-width: 1024px) {
    .variants-section__title {
      font-size: 3rem;
    }
  }

  .variants-section__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .variants-section__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .variants-section__image-wrapper {
    display: flex;
    justify-content: center;
  }

  .variants-section__image-container {
    position: relative;
  }

  .variants-section__image-glow {
    position: absolute;
    inset: 0;
    filter: blur(50px);
    transform: scale(1.3);
    transition: background 0.7s ease;
  }

  .variants-section__image {
    position: relative;
    z-index: 10;
    width: 100%;
    max-width: 24rem;
    transition: all 0.5s ease;
  }

  .variants-section__cards {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .variant-card {
    width: 100%;
    text-align: left;
    padding: 1.5rem;
    border-radius: 1rem;
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    background: transparent;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .variant-card:hover {
    border-color: {{ settings.color_foreground | color_modify: 'alpha', 0.15 }};
    background: {{ settings.color_card | color_modify: 'alpha', 0.5 }};
  }

  .variant-card.is-active {
    background: {{ settings.color_card }};
    border-color: {{ settings.color_foreground | color_modify: 'alpha', 0.2 }};
  }

  .variant-card__inner {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
  }

  .variant-card__color {
    width: 1rem;
    height: 1rem;
    border-radius: 50%;
    margin-top: 0.25rem;
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  .variant-card:hover .variant-card__color {
    transform: scale(1.1);
  }

  .variant-card__content {
    flex: 1;
  }

  .variant-card__name {
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    margin-bottom: 0.5rem;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.7 }};
    transition: color 0.3s ease;
  }

  .variant-card.is-active .variant-card__name {
    color: var(--variant-color);
  }

  .variant-card__description {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
    margin-bottom: 0.5rem;
  }

  .variant-card__identity {
    font-size: 0.75rem;
    color: {{ settings.color_muted | color_modify: 'alpha', 0.6 }};
    font-style: italic;
  }

  .variant-card__arrow {
    width: 1.25rem;
    height: 1.25rem;
    margin-top: 0.25rem;
    opacity: 0;
    transform: translateX(-0.5rem);
    transition: all 0.3s ease;
  }

  .variant-card.is-active .variant-card__arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .variants-section__cta {
    padding-top: 1.5rem;
  }

  .variants-section__trust {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    font-size: 0.75rem;
    color: {{ settings.color_muted | color_modify: 'alpha', 0.5 }};
  }

  .variants-section__trust-icon {
    width: 0.75rem;
    height: 0.75rem;
  }
{%- endstyle -%}

<section id="variantes" class="variants-section">
  <div class="variants-section__glow" id="variantsGlow"></div>

  <div class="variants-section__container">
    <div class="variants-section__header">
      <p class="variants-section__subtitle">{{ section.settings.subtitle }}</p>
      <h2 class="variants-section__title">{{ section.settings.title }}</h2>
    </div>

    <div class="variants-section__grid">
      <div class="variants-section__image-wrapper">
        <div class="variants-section__image-container">
          <div class="variants-section__image-glow" id="variantsImageGlow"></div>
          {%- if section.settings.product_image != blank -%}
            <img 
              src="{{ section.settings.product_image | image_url: width: 600 }}" 
              alt="LUMEI"
              class="variants-section__image"
              loading="lazy"
            >
          {%- else -%}
            <img 
              src="{{ 'lumei-product.png' | asset_url }}" 
              alt="LUMEI"
              class="variants-section__image"
              loading="lazy"
            >
          {%- endif -%}
        </div>
      </div>

      <div class="variants-section__cards">
        {%- for block in section.blocks -%}
          {%- if block.type == 'variant' -%}
            <button 
              class="variant-card {% if forloop.first %}is-active{% endif %}" 
              data-variant-color="{{ block.settings.color }}"
              data-variant-link="{{ block.settings.product_link | default: routes.all_products_collection_url }}"
              data-variant-name="{{ block.settings.name }}"
              {{ block.shopify_attributes }}
              style="--variant-color: {{ block.settings.color }}"
            >
              <div class="variant-card__inner">
                <div class="variant-card__color" style="background-color: {{ block.settings.color }}"></div>
                
                <div class="variant-card__content">
                  <h3 class="variant-card__name">{{ block.settings.name }}</h3>
                  <p class="variant-card__description">{{ block.settings.description }}</p>
                  <p class="variant-card__identity">{{ block.settings.identity }}</p>
                </div>

                <svg class="variant-card__arrow" viewBox="0 0 24 24" fill="none" stroke="{{ block.settings.color }}" stroke-width="2">
                  <path d="M5 12h14M12 5l7 7-7 7"/>
                </svg>
              </div>
            </button>
          {%- endif -%}
        {%- endfor -%}

        <div class="variants-section__cta">
          <a href="{{ routes.all_products_collection_url }}" class="button button--primary button--lg" id="variantsCta">
            Ver todos los productos
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"/>
            </svg>
          </a>
          
          <div class="variants-section__trust">
            <svg class="variants-section__trust-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            </svg>
            <span>Pago seguro · Devolución en 30 días</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const cards = document.querySelectorAll('.variant-card');
    const glow = document.getElementById('variantsGlow');
    const imageGlow = document.getElementById('variantsImageGlow');
    const cta = document.getElementById('variantsCta');

    cards.forEach(card => {
      card.addEventListener('click', function() {
        cards.forEach(c => c.classList.remove('is-active'));
        this.classList.add('is-active');
        
        const color = this.dataset.variantColor;
        const link = this.dataset.variantLink;
        const name = this.dataset.variantName;
        
        if (glow) glow.style.background = `radial-gradient(circle, ${color}26, transparent 60%)`;
        if (imageGlow) imageGlow.style.background = `radial-gradient(circle at center, ${color}66, transparent 60%)`;
        
        if (cta && link) {
          cta.href = link;
          cta.innerHTML = `Elegir ${name} <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>`;
        }
      });
    });

    // Initialize with first variant
    if (cards.length > 0) {
      const firstColor = cards[0].dataset.variantColor;
      if (glow) glow.style.background = `radial-gradient(circle, ${firstColor}26, transparent 60%)`;
      if (imageGlow) imageGlow.style.background = `radial-gradient(circle at center, ${firstColor}66, transparent 60%)`;
    }
  });
</script>

