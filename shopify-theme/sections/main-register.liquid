{% comment %}
  LUMEI - Main Register Section
{% endcomment %}

{%- style -%}
  .register-section {
    padding: 8rem 1.5rem 5rem;
    min-height: 70vh;
    display: flex;
    align-items: center;
  }

  .register-section__container {
    max-width: 28rem;
    margin: 0 auto;
    width: 100%;
  }

  .register-section__header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .register-section__title {
    font-size: 2rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
    margin-bottom: 0.5rem;
  }

  .register-section__subtitle {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
  }

  .register-section__form {
    background: {{ settings.color_card }};
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-radius: 1rem;
    padding: 2rem;
  }

  .register-section__field {
    margin-bottom: 1.5rem;
  }

  .register-section__label {
    display: block;
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
    margin-bottom: 0.5rem;
  }

  .register-section__input {
    width: 100%;
    padding: 0.875rem 1rem;
    background: {{ settings.color_background }};
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-radius: 0.5rem;
    color: {{ settings.color_foreground }};
    font-size: 1rem;
    font-family: 'Inter', sans-serif;
  }

  .register-section__input:focus {
    outline: none;
    border-color: {{ settings.color_lamp_purple }};
  }

  .register-section__submit {
    width: 100%;
    margin-bottom: 1rem;
  }

  .register-section__login {
    text-align: center;
    margin-top: 2rem;
    padding-top: 2rem;
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .register-section__login-text {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
  }

  .register-section__login-link {
    color: {{ settings.color_lamp_purple }};
    text-decoration: none;
  }

  .register-section__login-link:hover {
    text-decoration: underline;
  }

  .register-section__errors {
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.3);
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }

  .register-section__error {
    color: #ef4444;
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
  }
{%- endstyle -%}

<section class="register-section">
  <div class="register-section__container">
    <div class="register-section__header">
      <h1 class="register-section__title">Crear cuenta</h1>
      <p class="register-section__subtitle">Únete a la comunidad LUMEI</p>
    </div>

    <div class="register-section__form">
      {%- form 'create_customer' -%}
        {%- if form.errors -%}
          <div class="register-section__errors">
            <p class="register-section__error">{{ form.errors | default_errors }}</p>
          </div>
        {%- endif -%}

        <div class="register-section__field">
          <label for="RegisterFirstName" class="register-section__label">Nombre</label>
          <input
            type="text"
            name="customer[first_name]"
            id="RegisterFirstName"
            class="register-section__input"
            autocomplete="given-name"
            required
          >
        </div>

        <div class="register-section__field">
          <label for="RegisterLastName" class="register-section__label">Apellidos</label>
          <input
            type="text"
            name="customer[last_name]"
            id="RegisterLastName"
            class="register-section__input"
            autocomplete="family-name"
            required
          >
        </div>

        <div class="register-section__field">
          <label for="RegisterEmail" class="register-section__label">Email</label>
          <input
            type="email"
            name="customer[email]"
            id="RegisterEmail"
            class="register-section__input"
            autocomplete="email"
            autocorrect="off"
            autocapitalize="off"
            required
          >
        </div>

        <div class="register-section__field">
          <label for="RegisterPassword" class="register-section__label">Contraseña</label>
          <input
            type="password"
            name="customer[password]"
            id="RegisterPassword"
            class="register-section__input"
            autocomplete="new-password"
            required
          >
        </div>

        <button type="submit" class="button button--primary button--xl register-section__submit">
          Crear cuenta
        </button>
      {%- endform -%}
    </div>

    <div class="register-section__login">
      <p class="register-section__login-text">
        ¿Ya tienes cuenta? <a href="{{ routes.account_login_url }}" class="register-section__login-link">Iniciar sesión</a>
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Registro LUMEI",
  "tag": "section",
  "class": "section-main-register"
}
{% endschema %}
