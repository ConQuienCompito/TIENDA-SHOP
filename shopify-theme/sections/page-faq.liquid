{% comment %}
  LUMEI - Página FAQ completa
  100% editable desde Shopify Theme Editor usando bloques
{% endcomment %}

{%- style -%}
  .page-faq {
    padding: 8rem 1.5rem 5rem;
  }

  .page-faq__container {
    max-width: 48rem;
    margin: 0 auto;
  }

  .page-faq__header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .page-faq__subtitle {
    font-size: 0.875rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_muted }};
    margin-bottom: 1rem;
    font-family: 'Inter', sans-serif;
  }

  .page-faq__title {
    font-size: 2.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
    margin-bottom: 1rem;
  }

  .page-faq__intro {
    font-size: 1rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
  }

  .page-faq__list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 2rem;
  }

  .page-faq__item {
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-radius: 0.75rem;
    padding: 0 1.5rem;
    transition: background 0.3s ease;
  }

  .page-faq__item[open] {
    background: {{ settings.color_card | color_modify: 'alpha', 0.5 }};
  }

  .page-faq__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 0;
    cursor: pointer;
    list-style: none;
    font-size: 1rem;
    font-family: 'Inter', sans-serif;
    color: {{ settings.color_foreground }};
  }

  .page-faq__question::-webkit-details-marker {
    display: none;
  }

  .page-faq__icon {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
    color: {{ settings.color_muted }};
    transition: transform 0.3s ease;
  }

  .page-faq__item[open] .page-faq__icon {
    transform: rotate(180deg);
  }

  .page-faq__answer {
    padding-bottom: 1.25rem;
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
    line-height: 1.7;
  }

  .page-faq__contact {
    text-align: center;
    padding: 3rem;
    background: {{ settings.color_card }};
    border-radius: 1rem;
    margin-top: 3rem;
  }

  .page-faq__contact-title {
    font-size: 1.25rem;
    font-family: 'Cormorant Garamond', serif;
    color: {{ settings.color_foreground }};
    margin-bottom: 1rem;
  }

  .page-faq__contact-text {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    margin-bottom: 1.5rem;
  }
{%- endstyle -%}

<section class="page-faq">
  <div class="page-faq__container">
    <div class="page-faq__header">
      <p class="page-faq__subtitle">{{ section.settings.subtitle }}</p>
      <h1 class="page-faq__title">{{ section.settings.title }}</h1>
      <p class="page-faq__intro">{{ section.settings.intro }}</p>
    </div>

    {%- if section.blocks.size > 0 -%}
      <div class="page-faq__list">
        {%- for block in section.blocks -%}
          {%- if block.type == 'faq_item' -%}
            <details class="page-faq__item" {{ block.shopify_attributes }}>
              <summary class="page-faq__question">
                {{ block.settings.question }}
                <svg class="page-faq__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M6 9l6 6 6-6"/>
                </svg>
              </summary>
              <div class="page-faq__answer">
                {{ block.settings.answer }}
              </div>
            </details>
          {%- endif -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    <div class="page-faq__contact">
      <h3 class="page-faq__contact-title">{{ section.settings.contact_title }}</h3>
      <p class="page-faq__contact-text">{{ section.settings.contact_text }}</p>
      <a href="mailto:{{ section.settings.contact_email }}" class="button button--outline button--lg">
        {{ section.settings.contact_button }}
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Página FAQ",
  "tag": "section",
  "class": "section-page-faq",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "Preguntas frecuentes"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Todo lo que necesitas saber"
    },
    {
      "type": "textarea",
      "id": "intro",
      "label": "Introducción",
      "default": "Respuestas a las preguntas más comunes."
    },
    {
      "type": "header",
      "content": "Contacto"
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Título contacto",
      "default": "¿No encuentras lo que buscas?"
    },
    {
      "type": "textarea",
      "id": "contact_text",
      "label": "Texto contacto",
      "default": "Escríbenos y te responderemos en menos de 24h laborables."
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email",
      "default": "hola@lumei.es"
    },
    {
      "type": "text",
      "id": "contact_button",
      "label": "Botón contacto",
      "default": "Contactar"
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "Pregunta FAQ",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Pregunta",
          "default": "¿Cuál es tu pregunta?"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Respuesta",
          "default": "Escribe aquí la respuesta a esta pregunta."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Página FAQ",
      "blocks": [
        {
          "type": "faq_item",
          "settings": {
            "question": "¿Cómo funciona el envío?",
            "answer": "Envío gratuito a toda España peninsular en 24-48h laborables. Baleares, Canarias y Portugal tienen un coste adicional calculado al finalizar la compra."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "¿Qué fuente de alimentación necesita?",
            "answer": "Funciona mediante conexión USB-C. Incluye un cable de 2 metros. Puedes conectarla a cualquier puerto USB, adaptador de corriente o powerbank."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "¿Puedo devolver el producto?",
            "answer": "Sí, tienes 30 días desde la recepción para devolver el producto sin usar y en su embalaje original. Contacta con nosotros para iniciar el proceso."
          }
        },
        {
          "type": "faq_item",
          "settings": {
            "question": "¿Cada pieza es única?",
            "answer": "Sí. Cada pieza está hecha con cristales naturales, por lo que tiene variaciones únicas en forma y tonalidad."
          }
        }
      ]
    }
  ]
}
{% endschema %}
