{% comment %}
  LUMEI - Header Section
{% endcomment %}

{%- style -%}
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    transition: all 0.5s ease;
  }

  .header.is-scrolled {
    background: {{ settings.color_background | color_modify: 'alpha', 0.8 }};
    backdrop-filter: blur(16px);
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.05 }};
  }

  .header__container {
    max-width: 80rem;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 4rem;
  }

  @media (min-width: 768px) {
    .header__inner {
      height: 5rem;
    }
  }

  .header__logo {
    font-size: 1.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    letter-spacing: 0.1em;
    color: {{ settings.color_foreground }};
    text-decoration: none;
    transition: opacity 0.3s ease;
  }

  @media (min-width: 768px) {
    .header__logo {
      font-size: 1.875rem;
    }
  }

  .header__logo:hover {
    opacity: 0.8;
  }

  .header__nav {
    display: none;
    align-items: center;
    gap: 2.5rem;
  }

  @media (min-width: 768px) {
    .header__nav {
      display: flex;
    }
  }

  .header__nav-link {
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.7 }};
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: color 0.3s ease;
  }

  .header__nav-link:hover {
    color: {{ settings.color_foreground }};
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header__cart {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: transparent;
    border: none;
    color: {{ settings.color_foreground }};
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .header__cart:hover {
    opacity: 0.7;
  }

  .header__cart-count {
    position: absolute;
    top: -0.25rem;
    right: -0.25rem;
    width: 1rem;
    height: 1rem;
    background: {{ settings.color_lamp_purple }};
    color: {{ settings.color_foreground }};
    font-size: 0.625rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Inter', sans-serif;
  }

  .header__menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: transparent;
    border: none;
    color: {{ settings.color_foreground }};
    cursor: pointer;
  }

  @media (min-width: 768px) {
    .header__menu-toggle {
      display: none;
    }
  }

  .header__mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: {{ settings.color_background | color_modify: 'alpha', 0.95 }};
    backdrop-filter: blur(16px);
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    padding: 1.5rem;
  }

  .header__mobile-menu.is-open {
    display: block;
  }

  @media (min-width: 768px) {
    .header__mobile-menu {
      display: none !important;
    }
  }

  .header__mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .header__mobile-link {
    font-size: 1.125rem;
    font-family: 'Inter', sans-serif;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.7 }};
    text-decoration: none;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
  }

  .header__mobile-link:hover {
    color: {{ settings.color_foreground }};
  }
{%- endstyle -%}

<header class="header" id="siteHeader">
  <div class="header__container">
    <div class="header__inner">
      <a href="{{ routes.root_url }}" class="header__logo">
        {{ section.settings.logo_text | default: shop.name }}
      </a>

      <nav class="header__nav">
        {%- for link in section.settings.menu.links -%}
          <a href="{{ link.url }}" class="header__nav-link">
            {{ link.title }}
          </a>
        {%- endfor -%}
      </nav>

      <div class="header__actions">
        <button type="button" class="header__cart" id="cart-toggle" aria-label="Abrir carrito">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <span class="header__cart-count" id="cart-count">{{ cart.item_count }}</span>
        </button>

        <button class="header__menu-toggle" id="menuToggle" aria-label="{{ 'accessibility.menu' | t }}">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" id="menuIcon">
            <line x1="3" y1="12" x2="21" y2="12"/>
            <line x1="3" y1="6" x2="21" y2="6"/>
            <line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" id="closeIcon" style="display: none;">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="header__mobile-menu" id="mobileMenu">
    <nav class="header__mobile-nav">
      {%- for link in section.settings.menu.links -%}
        <a href="{{ link.url }}" class="header__mobile-link">
          {{ link.title }}
        </a>
      {%- endfor -%}
    </nav>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const header = document.getElementById('siteHeader');
    const menuToggle = document.getElementById('menuToggle');
    const mobileMenu = document.getElementById('mobileMenu');
    const menuIcon = document.getElementById('menuIcon');
    const closeIcon = document.getElementById('closeIcon');

    window.addEventListener('scroll', () => {
      header.classList.toggle('is-scrolled', window.scrollY > 20);
    });

    menuToggle.addEventListener('click', () => {
      const isOpen = mobileMenu.classList.toggle('is-open');
      menuIcon.style.display = isOpen ? 'none' : 'block';
      closeIcon.style.display = isOpen ? 'block' : 'none';
    });
  });
</script>

{% schema %}
{
  "name": "Header",
  "class": "section-header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del logo",
      "default": "LUMEI"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menú de navegación",
      "default": "main-menu"
    }
  ]
}
{% endschema %}