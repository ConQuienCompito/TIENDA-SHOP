{% comment %}
  LUMEI - Header
{% endcomment %}

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: transparent;
    transition: all 0.3s ease;
  }

  .header.is-scrolled {
    background: {{ settings.color_background | color_modify: 'alpha', 0.95 }};
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .header__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .header__inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 70px;
  }

  .header__logo {
    font-size: 1.75rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    letter-spacing: 0.15em;
    color: {{ settings.color_foreground }};
    text-decoration: none;
  }

  .header__nav {
    display: none;
    align-items: center;
    gap: 40px;
  }

  @media (min-width: 768px) {
    .header__nav {
      display: flex;
    }
  }

  .header__nav-link {
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.7 }};
    text-decoration: none;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }

  .header__nav-link:hover {
    color: {{ settings.color_foreground }};
  }

  .header__actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .header__cart {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    color: {{ settings.color_foreground }};
    cursor: pointer;
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .header__cart:hover {
    background: {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .header__cart-count {
    position: absolute;
    top: 4px;
    right: 4px;
    min-width: 18px;
    height: 18px;
    background: {{ settings.color_lamp_purple }};
    color: white;
    font-size: 0.6875rem;
    font-weight: 600;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .header__menu-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: transparent;
    border: none;
    color: {{ settings.color_foreground }};
    cursor: pointer;
    border-radius: 10px;
  }

  @media (min-width: 768px) {
    .header__menu-toggle {
      display: none;
    }
  }

  .header__mobile-menu {
    display: none;
    position: fixed;
    top: 70px;
    left: 0;
    right: 0;
    bottom: 0;
    background: {{ settings.color_background }};
    padding: 24px;
    z-index: 99;
  }

  .header__mobile-menu.is-open {
    display: block;
  }

  @media (min-width: 768px) {
    .header__mobile-menu {
      display: none !important;
    }
  }

  .header__mobile-nav {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .header__mobile-link {
    font-size: 1.25rem;
    font-family: 'Cormorant Garamond', serif;
    color: {{ settings.color_foreground }};
    text-decoration: none;
    padding: 12px 0;
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }
</style>

<header class="header" id="siteHeader">
  <div class="header__container">
    <div class="header__inner">
      <a href="{{ routes.root_url }}" class="header__logo">
        {{ section.settings.logo_text | default: 'LUMEI' }}
      </a>

      <nav class="header__nav">
        {%- for link in section.settings.menu.links -%}
          <a href="{{ link.url }}" class="header__nav-link">{{ link.title }}</a>
        {%- endfor -%}
        {%- if section.settings.menu.links.size == 0 -%}
          <a href="/" class="header__nav-link">Inicio</a>
          <a href="/collections/all" class="header__nav-link">Colección</a>
          <a href="/pages/concepto" class="header__nav-link">Concepto</a>
          <a href="/pages/faq" class="header__nav-link">FAQ</a>
        {%- endif -%}
      </nav>

      <div class="header__actions">
        <button type="button" class="header__cart" id="cart-toggle" aria-label="Abrir carrito">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
          <span class="header__cart-count" id="cart-count">{{ cart.item_count }}</span>
        </button>

        <button type="button" class="header__menu-toggle" id="menuToggle" aria-label="Menú">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" id="menuIcon">
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" id="closeIcon" style="display: none;">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <div class="header__mobile-menu" id="mobileMenu">
    <nav class="header__mobile-nav">
      {%- for link in section.settings.menu.links -%}
        <a href="{{ link.url }}" class="header__mobile-link">{{ link.title }}</a>
      {%- endfor -%}
      {%- if section.settings.menu.links.size == 0 -%}
        <a href="/" class="header__mobile-link">Inicio</a>
        <a href="/collections/all" class="header__mobile-link">Colección</a>
        <a href="/pages/concepto" class="header__mobile-link">Concepto</a>
        <a href="/pages/faq" class="header__mobile-link">FAQ</a>
      {%- endif -%}
    </nav>
  </div>
</header>

<script>
(function() {
  var header = document.getElementById('siteHeader');
  var menuToggle = document.getElementById('menuToggle');
  var mobileMenu = document.getElementById('mobileMenu');
  var menuIcon = document.getElementById('menuIcon');
  var closeIcon = document.getElementById('closeIcon');
  var cartToggle = document.getElementById('cart-toggle');

  // Scroll effect
  window.addEventListener('scroll', function() {
    if (window.scrollY > 20) {
      header.classList.add('is-scrolled');
    } else {
      header.classList.remove('is-scrolled');
    }
  });

  // Mobile menu
  if (menuToggle) {
    menuToggle.addEventListener('click', function() {
      var isOpen = mobileMenu.classList.toggle('is-open');
      menuIcon.style.display = isOpen ? 'none' : 'block';
      closeIcon.style.display = isOpen ? 'block' : 'none';
      document.body.style.overflow = isOpen ? 'hidden' : '';
    });
  }

  // Cart toggle
  if (cartToggle) {
    cartToggle.addEventListener('click', function() {
      var drawer = document.getElementById('cart-drawer');
      var overlay = document.getElementById('cart-overlay');
      if (drawer) drawer.classList.add('is-open');
      if (overlay) overlay.classList.add('is-visible');
      document.body.style.overflow = 'hidden';
    });
  }
})();
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del logo",
      "default": "LUMEI"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menú de navegación",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
