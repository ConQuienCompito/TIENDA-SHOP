<header class="header" id="site-header">
  <div class="header__main">
    <div class="page-width">
      <div class="header__container">
        <a href="/" class="header__logo">{{ section.settings.logo_text | default: "LUMEI" }}</a>
        
        <nav class="header__nav">
          <ul class="header__nav-list">
            <li><a href="/" class="header__nav-link">Inicio</a></li>
            <li><a href="/collections/all" class="header__nav-link">Colección</a></li>
            <li><a href="/pages/concepto" class="header__nav-link">Concepto</a></li>
            <li><a href="/pages/faq" class="header__nav-link">FAQ</a></li>
          </ul>
        </nav>
        
        <div class="header__actions">
          <button class="header__cart" id="cart-toggle" type="button" aria-label="Ver carrito">
            <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="9" cy="21" r="1"></circle><circle cx="20" cy="21" r="1"></circle><path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path></svg>
            <span class="header__cart-count" id="cart-count">{{ cart.item_count }}</span>
          </button>
          
          <button class="header__menu-btn" id="menu-toggle" aria-label="Menú">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="18" x2="21" y2="18"></line></svg>
          </button>
        </div>
      </div>
    </div>
  </div>
  
  <div class="header__mobile-menu" id="mobile-menu">
    <div class="header__mobile-menu-inner">
      <button class="header__mobile-close" id="menu-close" type="button">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
      </button>
      <nav class="header__mobile-nav">
        <a href="/" class="header__mobile-link">Inicio</a>
        <a href="/collections/all" class="header__mobile-link">Colección</a>
        <a href="/pages/concepto" class="header__mobile-link">Concepto</a>
        <a href="/pages/faq" class="header__mobile-link">FAQ</a>
      </nav>
    </div>
  </div>
</header>

<style>
.header { position: sticky; top: 0; z-index: 100; background: var(--color-bg); border-bottom: 1px solid var(--color-border-light); }
.header__main { padding: 16px 0; }
.header__container { display: flex; align-items: center; justify-content: space-between; gap: 24px; }
.header__logo { font-size: 1.75rem; font-family: var(--font-display); font-weight: 300; letter-spacing: 0.15em; color: var(--color-text); }
.header__nav { display: none; }
.header__nav-list { display: flex; align-items: center; gap: 32px; list-style: none; }
.header__nav-link { font-size: 0.9375rem; font-weight: 400; color: var(--color-text-soft); transition: color 0.15s; }
.header__nav-link:hover { color: var(--color-text); }
.header__actions { display: flex; align-items: center; gap: 8px; }
.header__cart { position: relative; display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; background: none; border: none; color: var(--color-text); cursor: pointer; }
.header__cart-count { position: absolute; top: 4px; right: 4px; min-width: 18px; height: 18px; display: flex; align-items: center; justify-content: center; background: var(--color-primary); color: white; font-size: 0.6875rem; font-weight: 600; border-radius: 50%; }
.header__menu-btn { display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; background: none; border: none; color: var(--color-text); cursor: pointer; }
.header__mobile-menu { position: fixed; top: 0; right: -100%; width: 100%; max-width: 320px; height: 100vh; background: var(--color-bg); z-index: 200; transition: right 0.3s ease; }
.header__mobile-menu.is-open { right: 0; }
.header__mobile-menu-inner { padding: 24px; display: flex; flex-direction: column; height: 100%; }
.header__mobile-close { display: flex; align-items: center; justify-content: center; width: 44px; height: 44px; background: none; border: none; color: var(--color-text); margin-left: auto; margin-bottom: 24px; cursor: pointer; }
.header__mobile-nav { display: flex; flex-direction: column; gap: 4px; }
.header__mobile-link { display: block; padding: 14px 0; font-size: 1.125rem; font-weight: 400; color: var(--color-text); border-bottom: 1px solid var(--color-border-light); }
@media (min-width: 1024px) { .header__nav { display: block; } .header__menu-btn { display: none; } }
</style>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Texto del logo",
      "default": "LUMEI"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menú",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
