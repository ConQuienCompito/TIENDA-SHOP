  "name": "Contexto LUMEI",
  "settings": [
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtítulo",
      "default": "En tu espacio"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Título",
      "default": "Cómo vive en tu vida."
    }
  ],
  "blocks": [
    {
      "type": "context-item",
      "name": "Contexto",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
