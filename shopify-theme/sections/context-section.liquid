{% comment %}
  LUMEI - Context Section
{% endcomment %}

<style>
  .context {
    padding: 100px 20px;
    background: {{ settings.color_background }};
  }

  .context__container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .context__header {
    text-align: center;
    margin-bottom: 60px;
  }

  .context__subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: {{ settings.color_lamp_purple }};
    margin-bottom: 16px;
  }

  .context__title {
    font-size: 2rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
  }

  @media (min-width: 768px) {
    .context__title {
      font-size: 2.5rem;
    }
  }

  .context__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
  }

  @media (min-width: 768px) {
    .context__grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .context-card {
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    aspect-ratio: 3/4;
    background: {{ settings.color_card }};
  }

  .context-card__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
    transition: all 0.5s ease;
  }

  .context-card:hover .context-card__image {
    opacity: 0.8;
    transform: scale(1.05);
  }

  .context-card__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 32px;
    background: linear-gradient(transparent, {{ settings.color_background | color_modify: 'alpha', 0.9 }});
  }

  .context-card__title {
    font-size: 1.25rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 400;
    color: {{ settings.color_foreground }};
    margin-bottom: 8px;
  }

  .context-card__description {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
  }
</style>

<section class="context">
  <div class="context__container">
    <div class="context__header">
      <p class="context__subtitle">{{ section.settings.subtitle }}</p>
      <h2 class="context__title">{{ section.settings.title }}</h2>
    </div>

    <div class="context__grid">
      {%- for block in section.blocks -%}
        <div class="context-card" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <img src="{{ block.settings.image | image_url: width: 600 }}" alt="{{ block.settings.title }}" class="context-card__image" loading="lazy">
          {%- else -%}
            {{ 'lifestyle-1' | placeholder_svg_tag: 'context-card__image placeholder-svg' }}
          {%- endif -%}
          <div class="context-card__content">
            <h3 class="context-card__title">{{ block.settings.title }}</h3>
            <p class="context-card__description">{{ block.settings.description }}</p>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
