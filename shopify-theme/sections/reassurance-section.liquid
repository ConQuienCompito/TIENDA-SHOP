{% comment %}
  LUMEI - Reassurance Section
  Trust indicators: shipping, returns, security, warranty
{% endcomment %}

{%- style -%}
  .reassurance-section {
    padding: 5rem 1.5rem;
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.05 }};
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.05 }};
  }

  .reassurance-section__container {
    max-width: 64rem;
    margin: 0 auto;
  }

  .reassurance-section__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem 3rem;
  }

  @media (min-width: 768px) {
    .reassurance-section__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .reassurance-item {
    text-align: center;
  }

  .reassurance-item__icon {
    width: 1.5rem;
    height: 1.5rem;
    margin: 0 auto 0.75rem;
    color: {{ settings.color_muted }};
  }

  .reassurance-item__title {
    font-size: 0.875rem;
    font-family: 'Inter', sans-serif;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.8 }};
    margin-bottom: 0.25rem;
  }

  .reassurance-item__description {
    font-size: 0.75rem;
    color: {{ settings.color_muted | color_modify: 'alpha', 0.6 }};
    font-family: 'Inter', sans-serif;
  }
{%- endstyle -%}

<section class="reassurance-section">
  <div class="reassurance-section__container">
    <div class="reassurance-section__grid">
      {%- for block in section.blocks -%}
        <div class="reassurance-item" {{ block.shopify_attributes }}>
          {%- case block.settings.icon -%}
            {%- when 'truck' -%}
              <svg class="reassurance-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="1" y="3" width="15" height="13"/>
                <polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/>
                <circle cx="5.5" cy="18.5" r="2.5"/>
                <circle cx="18.5" cy="18.5" r="2.5"/>
              </svg>
            {%- when 'rotate' -%}
              <svg class="reassurance-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="1 4 1 10 7 10"/>
                <path d="M3.51 15a9 9 0 1 0 2.13-9.36L1 10"/>
              </svg>
            {%- when 'shield' -%}
              <svg class="reassurance-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              </svg>
            {%- when 'package' -%}
              <svg class="reassurance-item__icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"/>
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/>
                <polyline points="3.27 6.96 12 12.01 20.73 6.96"/>
                <line x1="12" y1="22.08" x2="12" y2="12"/>
              </svg>
          {%- endcase -%}
          <p class="reassurance-item__title">{{ block.settings.title }}</p>
          <p class="reassurance-item__description">{{ block.settings.description }}</p>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

