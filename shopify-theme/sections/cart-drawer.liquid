{% comment %}
  LUMEI - Cart Drawer
{% endcomment %}

<style>
  .cart-drawer {
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    max-width: 420px;
    height: 100vh;
    height: 100dvh;
    background: {{ settings.color_background }};
    z-index: 200;
    display: flex;
    flex-direction: column;
    transition: right 0.35s ease;
    box-shadow: -8px 0 40px rgba(0, 0, 0, 0.5);
  }

  .cart-drawer.is-open {
    right: 0;
  }

  .cart-drawer__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20px 24px;
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    flex-shrink: 0;
  }

  .cart-drawer__header-title {
    display: flex;
    align-items: center;
    gap: 10px;
    color: {{ settings.color_foreground }};
  }

  .cart-drawer__header-title svg {
    color: {{ settings.color_lamp_purple }};
  }

  .cart-drawer__header h2 {
    font-size: 1.125rem;
    font-weight: 500;
    margin: 0;
    font-family: 'Inter', sans-serif;
  }

  .cart-drawer__close {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: {{ settings.color_card }};
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    color: {{ settings.color_foreground }};
    cursor: pointer;
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .cart-drawer__close:hover {
    background: {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    border-color: {{ settings.color_lamp_purple }};
  }

  .cart-drawer__content {
    flex: 1;
    overflow-y: auto;
    padding: 20px 24px;
  }

  .cart-drawer__items {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .cart-drawer__item {
    display: grid;
    grid-template-columns: 72px 1fr 28px;
    gap: 12px;
    padding: 14px;
    background: {{ settings.color_card }};
    border-radius: 12px;
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .cart-drawer__item-image {
    width: 72px;
    height: 72px;
    border-radius: 8px;
    overflow: hidden;
    background: {{ settings.color_background }};
    display: block;
  }

  .cart-drawer__item-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .cart-drawer__item-info {
    display: flex;
    flex-direction: column;
    min-width: 0;
  }

  .cart-drawer__item-title {
    font-size: 0.875rem;
    font-weight: 500;
    color: {{ settings.color_foreground }};
    line-height: 1.3;
    margin-bottom: 4px;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-decoration: none;
  }

  .cart-drawer__item-variant {
    font-size: 0.75rem;
    color: {{ settings.color_muted }};
    margin: 0 0 auto;
  }

  .cart-drawer__item-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
  }

  .cart-drawer__item-price {
    font-size: 0.875rem;
    font-weight: 600;
    color: {{ settings.color_foreground }};
  }

  .cart-drawer__item-qty {
    display: flex;
    align-items: center;
    background: {{ settings.color_background }};
    border-radius: 6px;
    border: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .cart-drawer__qty-btn {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: none;
    border: none;
    cursor: pointer;
    font-size: 14px;
    color: {{ settings.color_foreground }};
  }

  .cart-drawer__item-qty span {
    min-width: 24px;
    text-align: center;
    font-weight: 500;
    font-size: 0.8125rem;
    color: {{ settings.color_foreground }};
  }

  .cart-drawer__remove {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    background: none;
    border: none;
    color: {{ settings.color_muted }};
    cursor: pointer;
    padding: 0;
  }

  .cart-drawer__remove:hover {
    color: #ef4444;
  }

  .cart-drawer__empty {
    text-align: center;
    padding: 60px 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .cart-drawer__empty-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ settings.color_card }};
    border-radius: 50%;
    margin-bottom: 20px;
    color: {{ settings.color_muted }};
  }

  .cart-drawer__empty h3 {
    font-size: 1rem;
    margin-bottom: 8px;
    font-family: 'Inter', sans-serif;
    font-weight: 500;
    color: {{ settings.color_foreground }};
  }

  .cart-drawer__empty p {
    color: {{ settings.color_muted }};
    margin-bottom: 20px;
    font-size: 0.875rem;
  }

  .cart-drawer__footer {
    padding: 20px 24px;
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
    background: {{ settings.color_background }};
    flex-shrink: 0;
  }

  .cart-drawer__subtotal {
    display: flex;
    justify-content: space-between;
    margin-bottom: 4px;
  }

  .cart-drawer__subtotal span:first-child {
    font-size: 0.9375rem;
    color: {{ settings.color_muted }};
  }

  .cart-drawer__subtotal-price {
    font-size: 1.25rem;
    font-weight: 600;
    color: {{ settings.color_foreground }};
  }

  .cart-drawer__shipping-note {
    font-size: 0.75rem;
    color: {{ settings.color_muted }};
    margin: 0 0 16px;
  }

  .cart-drawer__checkout-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    background: {{ settings.color_lamp_purple }};
    color: white;
    font-size: 1rem;
    font-weight: 600;
    padding: 16px 24px;
    border-radius: 10px;
    border: none;
    cursor: pointer;
    transition: all 0.2s ease;
    text-decoration: none;
  }

  .cart-drawer__checkout-btn:hover {
    opacity: 0.9;
    box-shadow: 0 0 40px {{ settings.color_lamp_purple | color_modify: 'alpha', 0.4 }};
  }

  .cart-drawer__trust {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 16px;
    padding-top: 16px;
    border-top: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .cart-drawer__trust-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.75rem;
    color: {{ settings.color_muted }};
  }

  .cart-drawer__trust-item svg {
    color: #34d399;
  }
</style>

<div class="cart-drawer" id="cart-drawer">
  <div class="cart-drawer__header">
    <div class="cart-drawer__header-title">
      <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <circle cx="9" cy="21" r="1"></circle>
        <circle cx="20" cy="21" r="1"></circle>
        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
      </svg>
      <h2>Tu carrito</h2>
    </div>
    <button class="cart-drawer__close" id="cart-drawer-close" type="button" aria-label="Cerrar carrito">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
  
  <div class="cart-drawer__content" id="cart-drawer-content">
    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__items">
        {%- for item in cart.items -%}
          <div class="cart-drawer__item" data-key="{{ item.key }}">
            <a href="{{ item.url }}" class="cart-drawer__item-image">
              {%- if item.image -%}
                <img src="{{ item.image | image_url: width: 150 }}" alt="">
              {%- endif -%}
            </a>
            <div class="cart-drawer__item-info">
              <a href="{{ item.url }}" class="cart-drawer__item-title">{{ item.product.title }}</a>
              {%- unless item.product.has_only_default_variant -%}
                <p class="cart-drawer__item-variant">{{ item.variant.title }}</p>
              {%- endunless -%}
              <div class="cart-drawer__item-bottom">
                <div class="cart-drawer__item-qty">
                  <button class="cart-drawer__qty-btn" data-action="decrease" data-key="{{ item.key }}" type="button">−</button>
                  <span>{{ item.quantity }}</span>
                  <button class="cart-drawer__qty-btn" data-action="increase" data-key="{{ item.key }}" type="button">+</button>
                </div>
                <div class="cart-drawer__item-price">{{ item.final_line_price | money }}</div>
              </div>
            </div>
            <button class="cart-drawer__remove" data-key="{{ item.key }}" type="button" aria-label="Eliminar">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polyline points="3 6 5 6 21 6"></polyline>
                <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
              </svg>
            </button>
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="cart-drawer__empty">
        <div class="cart-drawer__empty-icon">
          <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
        </div>
        <h3>Tu carrito está vacío</h3>
        <p>Descubre nuestras lámparas de cristal</p>
        <a href="/collections/all" class="btn btn--accent">Ver colección</a>
      </div>
    {%- endif -%}
  </div>
  
  <div class="cart-drawer__footer" id="cart-drawer-footer" {% if cart.item_count == 0 %}style="display:none;"{% endif %}>
    <div class="cart-drawer__subtotal">
      <span>Subtotal</span>
      <span class="cart-drawer__subtotal-price" id="cart-subtotal">{{ cart.total_price | money }}</span>
    </div>
    <p class="cart-drawer__shipping-note">Envío gratuito en pedidos superiores a 50€</p>
    
    <a href="/checkout" class="cart-drawer__checkout-btn">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
      </svg>
      Finalizar compra
    </a>
    
    <div class="cart-drawer__trust">
      <div class="cart-drawer__trust-item">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
        </svg>
        <span>Pago seguro</span>
      </div>
      <div class="cart-drawer__trust-item">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>30 días devolución</span>
      </div>
    </div>
  </div>
</div>

<script>
(function() {
  var drawer = document.getElementById('cart-drawer');
  var overlay = document.getElementById('cart-overlay');
  var closeBtn = document.getElementById('cart-drawer-close');
  
  function closeDrawer() {
    if (drawer) drawer.classList.remove('is-open');
    if (overlay) overlay.classList.remove('is-visible');
    document.body.style.overflow = '';
  }
  
  if (closeBtn) closeBtn.onclick = closeDrawer;
  if (overlay) overlay.onclick = closeDrawer;
  
  document.addEventListener('click', function(e) {
    var qtyBtn = e.target.closest('.cart-drawer__qty-btn');
    var removeBtn = e.target.closest('.cart-drawer__remove');
    
    if (qtyBtn) {
      var key = qtyBtn.dataset.key;
      var action = qtyBtn.dataset.action;
      var item = qtyBtn.closest('.cart-drawer__item');
      var qtySpan = item.querySelector('.cart-drawer__item-qty span');
      var currentQty = parseInt(qtySpan.textContent);
      var newQty = action === 'increase' ? currentQty + 1 : currentQty - 1;
      if (newQty < 1) newQty = 0;
      
      fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: key, quantity: newQty })
      })
      .then(function(r) { return r.json(); })
      .then(function() { location.reload(); });
    }
    
    if (removeBtn) {
      var key = removeBtn.dataset.key;
      fetch('/cart/change.js', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: key, quantity: 0 })
      })
      .then(function(r) { return r.json(); })
      .then(function() { location.reload(); });
    }
  });
})();
</script>

