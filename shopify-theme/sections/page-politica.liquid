{% comment %}
  LUMEI - Página de Política genérica
  Muestra el contenido de la página de Shopify - 100% editable desde Pages
{% endcomment %}

{%- style -%}
  .page-politica {
    padding: 8rem 1.5rem 5rem;
  }

  .page-politica__container {
    max-width: 48rem;
    margin: 0 auto;
  }

  .page-politica__header {
    text-align: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid {{ settings.color_foreground | color_modify: 'alpha', 0.1 }};
  }

  .page-politica__title {
    font-size: 2.5rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 300;
    color: {{ settings.color_foreground }};
    margin-bottom: 1rem;
  }

  .page-politica__updated {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
    font-family: 'Inter', sans-serif;
  }

  .page-politica__content {
    font-family: 'Inter', sans-serif;
    color: {{ settings.color_foreground | color_modify: 'alpha', 0.8 }};
    line-height: 1.8;
  }

  .page-politica__content h2 {
    font-size: 1.25rem;
    font-family: 'Cormorant Garamond', serif;
    font-weight: 400;
    color: {{ settings.color_foreground }};
    margin: 2.5rem 0 1rem;
  }

  .page-politica__content h3 {
    font-size: 1rem;
    font-weight: 500;
    color: {{ settings.color_foreground }};
    margin: 1.5rem 0 0.75rem;
  }

  .page-politica__content p {
    margin-bottom: 1rem;
    font-size: 0.9375rem;
    color: {{ settings.color_muted }};
  }

  .page-politica__content ul,
  .page-politica__content ol {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .page-politica__content li {
    margin-bottom: 0.5rem;
    font-size: 0.9375rem;
    color: {{ settings.color_muted }};
  }

  .page-politica__content a {
    color: {{ settings.color_lamp_purple }};
    text-decoration: underline;
  }

  .page-politica__contact {
    margin-top: 3rem;
    padding: 2rem;
    background: {{ settings.color_card }};
    border-radius: 1rem;
    text-align: center;
  }

  .page-politica__contact-title {
    font-size: 1.125rem;
    font-family: 'Cormorant Garamond', serif;
    color: {{ settings.color_foreground }};
    margin-bottom: 0.75rem;
  }

  .page-politica__contact-text {
    font-size: 0.875rem;
    color: {{ settings.color_muted }};
  }

  .page-politica__contact-email {
    color: {{ settings.color_lamp_purple }};
    text-decoration: none;
  }

  .page-politica__contact-email:hover {
    text-decoration: underline;
  }
{%- endstyle -%}

<section class="page-politica">
  <div class="page-politica__container">
    <div class="page-politica__header">
      <h1 class="page-politica__title">{{ page.title }}</h1>
      {%- if section.settings.show_date -%}
        <p class="page-politica__updated">{{ section.settings.date_label }}: {{ page.updated_at | date: section.settings.date_format }}</p>
      {%- endif -%}
    </div>

    <div class="page-politica__content">
      {{ page.content }}
    </div>

    {%- if section.settings.show_contact -%}
      <div class="page-politica__contact">
        <h3 class="page-politica__contact-title">{{ section.settings.contact_title }}</h3>
        <p class="page-politica__contact-text">
          {{ section.settings.contact_text }} <a href="mailto:{{ section.settings.contact_email }}" class="page-politica__contact-email">{{ section.settings.contact_email }}</a>
        </p>
      </div>
    {%- endif -%}
  </div>
</section>

{% schema %}
{
  "name": "Página Política",
  "tag": "section",
  "class": "section-page-politica",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Mostrar fecha de actualización",
      "default": true
    },
    {
      "type": "text",
      "id": "date_label",
      "label": "Etiqueta de fecha",
      "default": "Última actualización"
    },
    {
      "type": "text",
      "id": "date_format",
      "label": "Formato de fecha",
      "default": "%d de %B de %Y"
    },
    {
      "type": "header",
      "content": "Sección de contacto"
    },
    {
      "type": "checkbox",
      "id": "show_contact",
      "label": "Mostrar sección de contacto",
      "default": true
    },
    {
      "type": "text",
      "id": "contact_title",
      "label": "Título",
      "default": "¿Tienes alguna pregunta?"
    },
    {
      "type": "text",
      "id": "contact_text",
      "label": "Texto",
      "default": "Escríbenos a"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email",
      "default": "hola@lumei.es"
    }
  ]
}
{% endschema %}
