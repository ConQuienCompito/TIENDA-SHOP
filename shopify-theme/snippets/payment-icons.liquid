{% comment %}
  LUMEI - Payment Icons Snippet
  Utiliza los iconos NATIVOS de Shopify basados en los m√©todos de pago habilitados
{% endcomment %}

{%- style -%}
  .payment-icons {
    display: flex;
    align-items: center;
    justify-content: {{ justify | default: 'center' }};
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .payment-icons .payment-icon {
    height: {{ height | default: '1.5rem' }};
    width: auto;
    opacity: {{ opacity | default: 0.6 }};
  }

  .payment-icons svg {
    height: {{ height | default: '1.5rem' }};
    width: auto;
  }
{%- endstyle -%}

<div class="payment-icons {{ class }}">
  {%- for type in shop.enabled_payment_types -%}
    {{ type | payment_type_svg_tag: class: 'payment-icon' }}
  {%- endfor -%}
</div>
